<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <View
        android:id="@+id/topSpace"
        android:layout_width="match_parent"
        android:layout_height="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/timeDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textColor="@android:color/black"
                android:layout_marginLeft="5dp"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/timeMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9月"
                android:textColor="@android:color/black"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="19dp"
                android:layout_toRightOf="@+id/timeDay"
                android:textSize="14sp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent" android:layout_height="80dp">

                <!--<net.datafans.android.common.widget.imageview.CommonImageView-->
                    <!--android:id="@+id/firstImg_in_items_userTextImage"-->
                    <!--android:layout_width="80dp"-->
                    <!--android:layout_height="80dp" />-->

                <ImageView
                    android:id="@+id/firstImg_in_items_userTextImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/text_in_items_userTextImage"
                    android:text="梅西现在觉得好多了。\n梅西现在觉得好多了。\n梅西现在觉得好多了。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/firstImg_in_items_userTextImage"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp"
                    android:padding="5dp"
                    android:maxLines="3"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/photoCount_in_items_userTextImage"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:text="共3张"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/firstImg_in_items_userTextImage"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="2dp"
                    android:textColor="#a4a4a4"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
