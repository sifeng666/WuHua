<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp">

    <net.datafans.android.common.widget.imageview.CommonImageView
        android:id="@+id/firstImg_in_items_userTextImage"
        android:background="@mipmap/messi_1"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/text_in_items_userTextImage"
        android:text="梅西现在觉得好多了。\n梅西现在觉得好多了。\n梅西现在觉得好多了。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/firstImg_in_items_userTextImage"
        android:textSize="15sp"
        android:lineSpacingExtra="2dp"
        android:padding="5dp"
        android:maxLines="3"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/photoCount_in_items_userTextImage"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:text="共3张"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/firstImg_in_items_userTextImage"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:textColor="#a4a4a4"/>
</RelativeLayout>