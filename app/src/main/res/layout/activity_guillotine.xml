<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/profile_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_large_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@mipmap/ic_person_black_48dp" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:textColor="#000"
            android:text="个人信息" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/album_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@mipmap/ic_face_black_48dp" />

        <TextView
            style="@style/TextView.GuillotineItem.Selected"
            android:textColor="#000"
            android:typeface="monospace"
            android:text="相册" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyle_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@mipmap/ic_camera_black_48dp" />

        <TextView
            style="@style/TextView.GuillotineItem.Selected"
            android:textColor="#000"
            android:typeface="monospace"
            android:text="lyle" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/settings_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@mipmap/setting_1" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:textColor="#000"
            android:text="设置" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/support_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:src="@mipmap/ic_thumb_up_black_48dp" />

        <TextView
            style="@style/TextView.GuillotineItem"
            android:textColor="#000"
            android:text="赞赏" />
    </LinearLayout>
</LinearLayout>