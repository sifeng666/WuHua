<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <net.datafans.android.common.widget.imageview.CommonImageView
        android:id="@+id/commonImg_cover_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/darker_gray"/>


    <FrameLayout
        android:id="@+id/layout_icon_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="160dp"
        android:background="@mipmap/messi_1">

        <net.datafans.android.common.widget.imageview.CommonImageView
            android:id="@+id/commonImg_icon_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"/>
    </FrameLayout>

    <TextView
        android:id="@+id/text_name_header"
        android:text="Messi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="165dp"
        android:layout_toLeftOf="@+id/layout_icon_header"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/text_sign_header"
        android:text="Messi is a super football player."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textColor="#b3b3b3"
        android:textSize="12sp"
        android:maxLines="1"
        android:layout_below="@+id/layout_icon_header"/>


</RelativeLayout>